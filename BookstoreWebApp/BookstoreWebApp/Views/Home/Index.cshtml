@model IEnumerable<midterm.Models.Book>

@{
    ViewData["Title"] = "Home";
}

<h1>Bookstore</h1>

<p>
    <a asp-controller="Book" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfRelease)
            </th>
            <th>
                Author
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfRelease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.AuthorFirst) @Html.DisplayFor(modelItem => item.Author.AuthorLast)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreType)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Book" asp-route-id="@item.BookId">Edit</a> |
                <a asp-action="Details" asp-controller="Book" asp-route-id="@item.BookId">Details</a> |
                <a asp-action="Delete" asp-controller="Book" asp-route-id="@item.BookId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
